<div class="index-container">
<div class="form-container">
  <h1>Edit</h1>

  <%= form_for :proposal, url: proposals_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, :value => @proposal.title %>
    </p>

    <p>
      <%= f.label :abstract %><br>
      <%= f.text_area :abstract, :value => @proposal.abstract %>
    </p>

    <p>
      <%= f.label :intro %><br>
      <%= f.text_area :intro, :value => @proposal.intro %>
    </p>

    <p>
      <%= f.label :hypothesis %><br>
      <%= f.text_area :hypothesis, :value => @proposal.hypothesis %>
    </p>

    <p>
      <%= f.label :exp_method %><br>
      <%= f.text_area :exp_method, :value => @proposal.exp_method %>
    </p>

    <p>
      <%= f.label :date_start %><br>
      <%= f.date_field :date_start, :value => @proposal.date_start %>
    </p>

    <p>
      <%= f.label :date_end %><br>
      <%= f.date_field :date_end, :value => @proposal.date_end %>
    </p>

  <div class="submit">
    <p>
      <%= f.submit %>
    </p>
  </div>
  <% end %>
</div>
</div>